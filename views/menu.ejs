<!DOCTYPE html>
<html>
    <head>
        <title>MENU</title>
        <link rel='stylesheet' href="/stylesheets/style.css" />
    </head>
    <body>
        <h1>MENU</h1>
        <h1>
            <button><a href="/">HOME</a></button>
            <button><a href="/cart">CART</a></button>
        </h1>
        <form action="/search" method="get">
            <input type="text" name="menu_name" placeholder="INSERT MENU NAME" required>
            <button type="submit">SEARCH</button>
            <button><a href="/menu">ALL</a></button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>MENU</th>
                    <th>PRICE</th>
                </tr>
            </thead>
            <tbody>
                <% var menu = searchData && searchData.length > 0 ? searchData : data; %>
                <% if (menu.length > 0) { %>
                    <% menu.forEach(function(menu) { %>
                        <tr>
                        <td><%= menu.menu_name%></td>
                        <td><%= menu.menu_price%></td>
                        <td><button><a href="/menu/<%= menu.menu_id %>">DETAIL</a></button></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">NO RESULT</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </body>
</html>